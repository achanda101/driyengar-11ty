---
layout: base.njk
heroType: "image"
homePage: false
---

<span id="innerPage" style="visibility: hidden"></span>
{% if heroDesk %}
<div
  class="hero-image"
  data-hero-image-desk="{{ heroDesk }}"
  data-hero-image-tablet="{{ heroTab }}"
  data-hero-image-mobile="{{ heroMob }}"
  alt="hero image description"
>
  <div class="hero--content">
    <div class="hero--text">{{ heroText }}</div>
    {% if heroTagline %}
    <div class="hero--tagline">{{ heroTagline }}</div>
    {% endif %} {% if heroDeskCredit and heroTabCredit and heroMobCredit %}
    <div
      class="hero--credit"
      data-hero-credit-desk="{{ heroDeskCredit }}"
      data-hero-credit-tablet="{{ heroTabCredit }}"
      data-hero-credit-mobile="{{ heroMobCredit }}"
    ></div>
    {% endif %}
  </div>
</div>
{% endif %}

<main>
  {{ content | safe }}
</main>

{% if heroText %}
<script>
  var heroContent = document.getElementsByClassName("hero--content")[0];
  var heroText = document.getElementsByClassName("hero--text")[0];
  var heroTagline = document.getElementsByClassName("hero--tagline")[0];
  var heroButtonList = document.getElementsByClassName("hero--buttons")[0];
  if (heroContent && heroText) {
    let tl = gsap.timeline();
    tl.from(heroContent, { autoAlpha: 0 });
    // insert exactly 1 seconds from the start of the timeline
    tl.fromTo(heroText, { alpha: 0 }, { duration: 2, alpha: 1 }, 1);

    if (heroTagline) {
      // insert at the END of the previous animation
      tl.fromTo(
        heroTagline,
        { y: -30, alpha: 0 },
        { duration: 2, y: 0, alpha: 1 },
        ">"
      );
    }
    if (heroButtonList) {
      tl.fromTo(heroButtonList, { alpha: 0 }, { duration: 1, alpha: 1 });
    }
  }
</script>
{% endif %}

<script>
  var heroImage = document.getElementsByClassName("hero-image")[0];
  var heroCredit = document.getElementsByClassName("hero--credit")[0];
  if (heroImage) {
    if (window.innerWidth > 1199) {
      heroImage.style.backgroundImage = heroImage.dataset.heroImageDesk;
    } else if (window.innerWidth > 599) {
      heroImage.style.backgroundImage = heroImage.dataset.heroImageTablet;
    } else {
      heroImage.style.backgroundImage = heroImage.dataset.heroImageMobile;
    }
  }
  if (heroCredit) {
    if (window.innerWidth > 1199) {
      heroCredit.innerHTML = "Credit - " + heroCredit.dataset.heroCreditDesk;
    } else if (window.innerWidth > 599) {
      heroCredit.innerHTML = "Credit - " + heroCredit.dataset.heroCreditTablet;
    } else {
      heroCredit.innerHTML = "Credit - " + heroCredit.dataset.heroCreditMobile;
    }
  }
</script>
